<nav id="header" class="bg-white fixed w-full z-10 top-0 shadow">
  <div class="w-full container mx-auto flex flex-wrap items-center mt-0 pt-3 pb-3 md:pb-0">
    <div class="w-1/2 pl-2 md:pl-0">
      <a class="text-gray-900 text-base xl:text-xl no-underline hover:no-underline font-bold" href="#">
        <i class="fas fa-database text-orange-600 pr-3"></i> <%= app_name %>
      </a>
    </div>
    <div class="w-1/2 pr-0">
    </div>
    <div class="w-full flex-grow lg:flex lg:items-center lg:w-auto hidden lg:block mt-2 lg:mt-0 bg-white z-20" id="nav-content">
      <ul class="list-reset lg:flex flex-1 items-center px-4 md:px-0">
        <% Dbmon::WebApplication.tabs.each do |tab, url| %>
          <% if url == '' %>
            <li class="mr-6 my-2 md:my-0">
              <a href="<%= [root_path, url].join('/') %>" class="<%= current_path.start_with?(url) && current_path == '' ? 'border-b-2 text-orange-600' : 'text-gray-500 hover:border-orange-600' %> block py-1 md:py-3 pl-1 align-middle no-underline hover:text-gray-900 border-orange-600">
                <i class="fa fa-wallet fa-fw mr-3"></i><span class="pb-1 md:pb-0 text-sm"><%= tab %></span>
              </a>
            </li>
          <% else %>
            <li class="mr-6 my-2 md:my-0">
              <a href="<%= [root_path, url].join('/') %>" class="<%= current_path.start_with?(url) ? 'border-b-2 text-orange-600' : 'text-gray-500 hover:border-orange-600' %> block py-1 md:py-3 pl-1 align-middle no-underline hover:text-gray-900 border-orange-600">
                <i class="fa fa-wallet fa-fw mr-3"></i><span class="pb-1 md:pb-0 text-sm"><%= tab %></span>
              </a>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
