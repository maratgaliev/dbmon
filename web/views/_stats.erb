<div class="flex flex-wrap">
  <% data.each do |api_item| %>
    <% if api_item[:api].any? %>
      <div class="w-full p-3">
        <div class="bg-white border rounded shadow p-2">
          <div class="flex flex-row items-center">
            <div class="flex-shrink pr-4">
              <div class="rounded p-3 bg-blue-600"><i class="fas fa-server fa-2x fa-fw fa-inverse"></i></div>
            </div>
            <div class="flex-1 text-right md:text-center">
              <h5 class="font-bold uppercase text-gray-500"><%= api_item[:api][0][api_item[:api][0].keys[0]] %></h5>
              <h3 class="font-bold text-2xl"><%= api_item[:api][0][api_item[:api][0].keys[1]] || '-'.html_safe %></h3>
              <h6 class="font-bold uppercase text-gray-700 text-1xl truncate"><%= api_item[:message] %></h6>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
